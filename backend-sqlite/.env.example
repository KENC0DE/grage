# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (SQLite)
DB_PATH=./database.sqlite
# Set to true to reset database on server start (use with caution!)
DB_RESET=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# CORS Configuration
# This should match the URL of your frontend application
CORS_ORIGIN=http://localhost:5173

# Optional: For future scalability
# When ready to switch to PostgreSQL or MySQL, use these:
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=garage_service
# DB_USER=postgres
# DB_PASSWORD=password

# AWS S3 (for image uploads - future enhancement)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_bucket_name

# Email Configuration (future enhancement)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_email_password
